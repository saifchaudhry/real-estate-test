<section class="login_part padding_top">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6 col-md-6">
        <div class="login_part_form">
          <div class="login_part_form_iner">
            <h3>Select multiple pictures at once.</h3>
            <%= form_for @asset, :url => { :action => "create" } do |f| %>
              <label>Price</label>
              <%= f.number_field :price %>
              
              <label>Owner</label>
              <%= f.text_field :owner %>

              <label>Type</label>
              <%= f.select :type, Asset::TYPES, :prompt => 'Select One' %>


              <div class="col-md-12 form-group p_star">
                <%= f.file_field :file, :multiple => true, name: "product[pictures_attributes][][file]", class: "form-control" %>
              </div>

              <div class="col-md-12 form-group">
                <%= f.submit "Save", class: "btn btn-default"%>              
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!--================login_part end =================-->